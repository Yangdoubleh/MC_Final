<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.example.demo.dao.MemberDAO">

	<!-- 로그인 -->
	<select id="login" parameterType="memberVO" resultType="memberVO">
		select * from member where id=#{id} and pw=#{pw}
	</select>
	
	<!-- 아이디 확인 -->
	<select id="idCheck" parameterType="memberVO" resultType="memberVO">
 		select * from member where id = #{id}
	</select>
	
	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="memberVO">
		insert into member(id,pw,email,nickname,age)
		values(#{id},#{pw},#{email},#{nickname},#{age})
	</insert>

	<!-- 회원정보 확인 -->
	<select id="selectMember" parameterType="memberVO" resultType="memberVO">
		select * from member where id = #{id}
	</select>
	
	<!-- 회원정보 수정 -->
	<update id="updateMember" parameterType="memberVO">
		update member set id=#{id}, pw=#{pw}, email=#{email}, nickname=#{nickname}, age=#{age} where id=#{id}
	</update>
	
	<!-- 회원탈퇴 -->
	<delete id="deleteMember" parameterType="memberVO">
		delete from member where id=#{id}
	</delete>
	
</mapper>  
